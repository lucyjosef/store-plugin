{
  "name": "Josef",
  "version": "1.0",
  "description": "Je vais claquer tellement de thune",
  "background": {
    "scripts": [
      "vendors/jquery-min-3_3_1.js",
      "background.js",
      "content.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://localhost:5000/*",
    "storage",
    "contextMenus",
    "declarativeContent"
  ],
  "icons": {
    "128": "img/bag_128.png",
    "64": "img/bag_64.png",
    "16": "img/bag_16.png"
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "option.html",
  "manifest_version": 2
}
